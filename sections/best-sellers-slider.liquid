<div class="page-width section-main">
  {% if section.settings.title != blank %}
    <div class="section-header text-center">
      <h2>{{ section.settings.title | escape }}</h2>
    </div>
  {% endif %}
  {%- assign collection = collections[section.settings.collection] -%}
  <ul class="grid main-grid grid--uniform grid--view-items">
    {% for product in collection.products %} 
      <li class="grid__item grid__item--{{section.id}} {{ grid_item_width }}">
        {% include 'product-card-grid-home', max_height: max_height, product: product, show_vendor: section.settings.show_vendor %}
      </li>
      {% endfor %}
  </ul>
</div>
{% schema %}
{
  "name": {
    "en": "Best Sellers"
  },
  "class": "index-section best-sellers fadein",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": {
        "en": "Heading"
      },
      "default": {
        "en": "Best Sellers collection"
      }
    },
    {
      "id": "collection",
      "type": "collection",
      "label": {
        "en": "Collection"
      }
    }
  ],
  "presets": [
    {
      "name": {
        "en": "Best Sellers Collection"
      },
      "category": {
        "en": "Collection"
      }
    }
  ]
}
{% endschema %}
{% stylesheet %}
.best-sellers{
  padding-top: 90px;
  padding-bottom: 0px;
  padding-left: 30px;
  padding-right: 30px;
}
.best-sellers .page-width.section-main{
  max-width: unset; 
  padding-left: 0px!important;
  padding-right: 0px!important;
}
.best-sellers .section-header{
  padding-left: 50px; 
  padding-right: 50px;
  margin-bottom: 35px;
} 
.best-sellers .section-header h2{
  text-align:right;
  font-family: "Compacta";
  font-size: 45px; 
  line-height: 55px;
  text-transform: uppercase;
  letter-spacing: normal;
  margin: 0; 
}
.best-sellers .main-grid .slick-list.draggable{ 
  padding-bottom: 60px; 
}
.best-sellers .main-grid{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin: 0;
  width: 100%;
  width: 100%;
  padding-left: 30px; 
  padding-right: 30px;
}

.best-sellers .main-grid:after{
  display: none!important;
}

body .best-sellers .main-grid .grid__item{
    padding-left: 0px!important;
    padding-right: 0px!important;
    width: calc(20% - 25px);  
    display: none;
}
body .best-sellers .main-grid .grid__item:nth-child(-n+5) {
  display: block;
}
body .best-sellers .main-grid .grid__item.slick-slide{
  display: block; 
  padding-left: 15px!important;
  padding-right: 15px!important;
}

body .best-sellers .product-card__image-with-placeholder-wrapper .grid-view-item__image-wrapper{
  max-width: unset!important;
  margin: 0; 
}
body .best-sellers .product-card__image-with-placeholder-wrapper .grid-view-item__image-wrapper div{
  padding: unset!important;
  height: 16.5vw!important;
}
body .best-sellers .product-card__image-with-placeholder-wrapper .grid-view-item__image-wrapper div img{
  max-width: unset!important;
  max-height: unset!important;
  height: 100%!important;
  object-fit: cover; 
}
.best-sellers .infoWrap{ 
  margin-top: 20px;
}
.best-sellers .infoWrap .vendor-wrapper{
  display: flex; 
  justify-content: space-between;
  align-items: flex-start;
}
.best-sellers .infoWrap .vendor-wrapper .grid-view-item__title a{
  font-family: 'Kepler'; 
  font-weight: 326;
  font-size: 15px;
  line-height: normal;
  text-transform: uppercase;
}
.best-sellers .grid-view-item.product-card{
  margin: 0 auto 0px!important; 
}
.best-sellers .grid-view-item.product-card .vendor-wrapper .grid-view-item__title{
  border-bottom: unset!important;
  padding-right: 10px;
  max-width: 70%;
  font-weight: 600;
  display: flex;
}
.best-sellers .infoWrap .vendor-wrapper .price.price--listing{
  font-family: 'Kepler';
  font-style: normal;
  font-weight: 326;
  font-size: 15px; 
  line-height: normal;
  width: 30%;
  align-items: flex-end;
}
.best-sellers .infoWrap .vendor-wrapper .price.price--listing *{
  margin:0; 
  font-weight: 326; 
}
  
.best-sellers .infoWrap .vendor-wrapper .price.price--listing > .price__regular{
  display: flex; 
  justify-content: flex-end;
  width: 100%;
}
.best-sellers .infoWrap .product-card__title{
  
}
.best-sellers .infoWrap .vendor-wrapper .price.price--listing.price--on-sale>.price__regular.on-sale{
  display: none!important; 
}
.best-sellers .price--on-sale .price__sale{
  flex-direction: row-reverse;
} 
.best-sellers .price__sale .price__compare{
  padding-left: 5px;
}
 
body .best-sellers .product-card__image-with-placeholder-wrapper form{
  opacity: 0;
  visibility: hidden;
  position: absolute;
  bottom: 40px;
  left: 50%;
  transform: translateX(-50%);
  z-index: 99;
  transition: all 0.4s ease-in-out;
  display: none;
}
body .best-sellers .product-card__image-with-placeholder-wrapper form .add-cart{
  width: 134px;
  height: 52px;
  color: #FFFFFF;
  background: #242D2D;
  font-family: 'Tungsten';
  font-style: normal;
  font-weight: 326;
  font-size: 22px;
  line-height: 26px;
  text-transform: uppercase; 
  border: 1px solid #242D2D;
  border-radius: unset;
  display: none; 
}
.best-sellers .grid-view-item.product-card:hover .product-card__image-with-placeholder-wrapper form{
  opacity: 1;
  visibility: visible;
}
body .best-sellers .product-card__image-with-placeholder-wrapper .grid-view-item__image-wrapper > a div::before{
  content:""; 
  width: 100%;
  height: 100%;
  background: #FF45D6;
  position: absolute;
  top: 0; 
  z-index: 9;
  visibility: hidden;
  opacity: 0;
  transition: all 0.4s ease-in-out; 
}
.best-sellers .grid-view-item.product-card:hover .product-card__image-with-placeholder-wrapper .grid-view-item__image-wrapper > a div::before{
  opacity: 0.2;
  visibility: visible; 
}

.best-sellers .infoWrap .brand-title .disnew{
  color: #000; 
  font-family: 'Kepler';
  font-style: normal;
  font-weight: 326;
  font-size: 15px;
  line-height: normal;
  display: flex;
  align-items: center;
  text-transform: capitalize; 
  margin-top: 5px; 
}
.best-sellers .main-grid .slick-arrow{
  background-position: center;
}
.best-sellers .main-grid .slick-prev:before, .best-sellers .main-grid .slick-next:before{
  display: none!important;
}
.best-sellers .main-grid .slick-prev{
  background-image: url('https://cdn.shopify.com/s/files/1/0573/2201/2880/t/56/assets/arrow-left.png?v=1664261587')!important;
  background-size: 100%;
  background-repeat: no-repeat;
  height: 35px;
  width: 18px;
  position: absolute;
  left: 0px!important; 
  right: unset;
  z-index: 99; 
  top: 8vw;
} 
.best-sellers .main-grid .slick-next{
  background-image: url('https://cdn.shopify.com/s/files/1/0573/2201/2880/t/56/assets/arrow-right.png?v=1664261596')!important;
  background-size: 100%;
  background-repeat: no-repeat;
  height: 35px;
  width: 18px;
  position: absolute;
  right: 0px!important;
  top: 8vw;
  transform: translateY(-50%);
  left: unset;
}
.best-sellers .grid-view-item--sold-out.product-card .infoWrap .brand-title .vendor-wrapper .sold-out-text{
  width: 70px;
  font-family: 'Kepler'; 
  font-size: 20px;
  line-height: normal;
  display: flex;
  justify-content: flex-end;
  align-items: flex-start;
}

.best-sellers .grid-view-item--sold-out.product-card .infoWrap .brand-title .vendor-wrapper .grid-view-item__title{
   width: calc(100% - 70px);
}

 

  
@media screen and (max-width: 1024px){
  body .best-sellers .product-card__image-with-placeholder-wrapper .grid-view-item__image-wrapper div{
    height: 20.5vw!important;
  }
  .best-sellers .main-grid .slick-prev{
    top: 10vw;
  } 
  .best-sellers .main-grid .slick-next{
    top: 10vw;
  }
  #shopify-section-1664256311a0659f79.fadein{
    opacity: 1;
    transition: unset;
    transform: unset;
    padding-bottom: 40px;
  }
} 
@media screen and (max-width: 820px){
  body .best-sellers .product-card__image-with-placeholder-wrapper .grid-view-item__image-wrapper div{
    height: 40vw!important; 
  }
  .best-sellers .main-grid .slick-prev{
    top: 20vw;
  }
  .best-sellers .main-grid .slick-next{
    top: 20vw;
  }
  .best-sellers .section-header{
    padding-right: 10px;
  }
  body .best-sellers .main-grid .grid__item{
    display: none!important;
  }
  body .best-sellers .main-grid .grid__item:nth-child(-n+2) {
    display: block!important;
  }
  body .best-sellers .main-grid .grid__item.slick-slide{
    display: block!important;
  }
  body .best-sellers .main-grid .grid__item{
    width: calc(50% - 25px);
  }
  .best-sellers{
    padding-bottom: 90px;
  }
  .best-sellers .main-grid .slick-list.draggable{
    padding-bottom: 0px;
  }
}
  
@media screen and (max-width: 767px){
  .best-sellers .infoWrap{
    margin-top: 10px;
  }
  .best-sellers .infoWrap .brand-title .disnew{
    font-size: 12px;
  }
  .best-sellers .infoWrap .vendor-wrapper .grid-view-item__title a{
    font-size: 12px;
    font-weight: 300;
}
.best-sellers .grid-view-item.product-card .vendor-wrapper .grid-view-item__title{
    padding-right: 0px; 
}
  .best-sellers .infoWrap .vendor-wrapper .price.price--listing{
    width: 45px;
  }
  .best-sellers .grid-view-item.product-card .vendor-wrapper .grid-view-item__title{
    width: calc(100% - 55px);
  }
  
  .best-sellers .infoWrap .vendor-wrapper .price.price--listing *{
    font-weight: 300;
    font-size: 12px;
  }
body .best-sellers .product-card__image-with-placeholder-wrapper .grid-view-item__image-wrapper > a div::before{
  display: none;
}
  .index-section.best-sellers{
    /*display: none!important;*/
  } 
  .best-sellers .section-header{
    margin-bottom: 15px;
  }
  .best-sellers{
    padding: 20px 0px 20px 0; 
  }
  body .best-sellers .main-grid .grid__item{
    padding-left: 12.5px!important;
    padding-right: 12.5px!important;
    width: 50%;
  }
  .best-sellers .main-grid .slick-prev{
    left: 10px!important; 
  }
  .best-sellers .main-grid .slick-next{
    right: 10px!important;
  }
  .best-sellers .main-grid .slick-prev, .best-sellers .main-grid .slick-next{
    height: 20px;
    width: 8px;
  }
  .best-sellers .main-grid{
    padding-left: 20px;
    padding-right: 20px;
    width: 100%;
  }
  .best-sellers .section-header h2{
    font-size: 23px;
    line-height: 43.8px; 
  }
  .best-sellers .main-grid .slick-list.draggable{
    padding-bottom: 0px;
  }
}

  
