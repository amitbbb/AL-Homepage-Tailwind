{% if section.settings.main-heading != blank %}
<h2>{{ section.settings.main-heading }}</h2>
<ul class="cat-list">
  <img data-src="https://cdn.shopify.com/s/files/1/0573/2201/2880/t/56/assets/mob-bg0final.png?v=1664428309" class="lazyload mobile-show-bg" alt="{{ section.settings.main-heading }}"/>
  {% for block in section.blocks %}
  <li class="li-block-{{ forloop.index }}">
    <a href="{{ block.settings.category-url }}" class="overlay-mobile"></a> 
    <a href="{{ block.settings.category-url }}">
      <div class="cat-image">
        <img data-src="{{ block.settings.category-img | img_url: 'master'}}" class="lazyload" alt="{{ block.settings.category-name }}"/>
        <h3>{{ block.settings.category-name }}</h3>
        <div class="cat-lines">
            {% if block.settings.text1 != blank %}<p class="block-{{ forloop.index }} first">{{ block.settings.text1 }}</p>{% endif %}
            {% if block.settings.text2 != blank %}<p class="block-{{ forloop.index }} second">{{ block.settings.text2 }}</p>{% endif %}
            {% if block.settings.text3 != blank %}<p class="block-{{ forloop.index }} third">{{ block.settings.text3 }}</p>{% endif %}
            {% if block.settings.text4 != blank %}<p class="block-{{ forloop.index }} fourth">{{ block.settings.text4 }}</p>{% endif %}
        </div>
      </div>
      <div class="cat-content">
        <h3>{{ block.settings.category-name }}</h3>
        <div class="cat-lines">
            {% if block.settings.text1 != blank %}<p class="block-{{ forloop.index }} first">{{ block.settings.text1 }}</p>{% endif %}
            {% if block.settings.text2 != blank %}<p class="block-{{ forloop.index }} second">{{ block.settings.text2 }}</p>{% endif %}
            {% if block.settings.text3 != blank %}<p class="block-{{ forloop.index }} third">{{ block.settings.text3 }}</p>{% endif %}
            {% if block.settings.text4 != blank %}<p class="block-{{ forloop.index }} fourth">{{ block.settings.text4 }}</p>{% endif %}
        </div>
      </div>
    </a>
  </li>
  {% endfor %}
</ul> 
{% endif %}
{% schema %}
{
  "name": "Custom Categories",
  "class": "custom-categories",
  "settings": [
    { 
      "type": "text",
      "id": "main-heading",
      "label": "Main Heading"
    }
  ],
  "blocks": [
    {
      "type": "Category",
      "name": "Category Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "category-img",
          "label":"Category Image"
        },
        {
          "type": "text",
          "id": "category-name",
          "label": "Category Name"
        },
        {
          "type": "text",
          "id": "category-url",
          "label":"Category URL"
        },
        {
          "type": "header",
          "content": "Paragraph"
        },
        {
          "type": "text",
          "id": "text1",
          "label":"Text Line 1"
        },
        {
          "type": "text",
          "id": "text2",
          "label":"Text Line 2"
        },
        {
          "type": "text",
          "id": "text3",
          "label":"Text Line 3"
        },
        {
          "type": "text",
          "id": "text4",
          "label":"Text Line 4"
        }
      ]
    }
  ],
  "presets" : [
    {
      "name" : "Custom Categories"
    }
  ]
}
{% endschema %}

