<div data-section-id="{{ section.id }}" data-section-type="hero-section" class="xxxxa">
  <div class="main-hero-slider" id="Hero-{{ section.settings.id }}">
    {% for block in section.blocks %}
    <div class="banner-slide">
      <a href="{{ block.settings.main_url }}">
        <img class="lazyload banner-img" loading="lazy"
           data-src="{{ block.settings.image | img_url: "master" }}"
           data-widths="[180, 360, 470, 600, 770, 970, 1060, 1280, 1512, 1728, 2048]"
           data-aspectratio="{{ section.settings.image.aspect_ratio }}"
           data-sizes="auto" height="100" width="100"
           alt="{{ block.settings.title | escape }}">
      </a>
    </div>
  {% endfor %}
  </div>
</div>
 
{% schema %}
{
  "name": {
    "en": "Main Banner"
  },
  "class": "index-section index-section--flush hero-banner",
  "settings": [],
  "blocks": [
    {
      "type": "Slides",
      "name": "Banner Slides",
    "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "main_url",
      "label": "Main URL"
    }
  ]
 }
],
  "presets": [
    {
      "name": {
        "en": "Image with text overlay"
      },
      "category": {
        "en": "Image"

      }
    }
  ]
}
{% endschema %}
{% stylesheet %}
 .main-hero-slider .banner-slide:not(:first-child){
   display: none!important;
 }
.main-hero-slider.slick-slider .banner-slide{
  display: block!important;
} 
.main-hero-slider .slick-list.draggable *{
 border: unset!important;
 box-shadow: unset!important;
}
.main-hero-slider .banner-slide img{
  width: 100%;
  height: 100%;
  max-height: 684px;
  object-fit: cover;
}
.main-hero-slider .banner-slide a{
  display: block;
  max-height: 684px;
}
.main-hero-slider .slick-dots{ 
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  z-index: 99;
  bottom: -77px;
}
.main-hero-slider .slick-dots li button{
  background: #717171;
  border-radius: 100%;
  height: 14px;
  width: 14px;
  margin-left: 5px
}
.main-hero-slider .slick-dots li{
  height: 14px;
  width: 14px;
  padding: 5px;
  opacity: 0.5;
}  
.main-hero-slider .slick-dots li button:before{
  display: none;
}
.main-hero-slider .slick-dots li.slick-active{
  opacity: 1;
}  
.index-section.hero-banner{
  padding-bottom: 75px;
}
.shopify-section.hero-banner { 
  margin-top: 140px;
}
.banner-content .sub-heading {
  margin: 0;
  font-size: 40px;
  font-weight: bold;
  font-family: "Tungsten";
  color: #fff;
}
.banner-content .mega-title {
  margin: 0;
  font-size: 140px;
  color: #fff;
  font-family: "Tungsten";
  text-transform: uppercase;
}
.banner-content .shop-btn {
  text-transform: uppercase;
  color: #fff;
  font-family: "Tungsten";
  font-size: 45px;
  line-height: 54px;
  padding: 15px 30px;
  background: #242d2d;
  display: block;
  max-width: 210px;
  margin: 180px auto;
  font-weight: 500;
}
.banner-content .author {
  font-size: 34px;
  color: #fff;
  font-family: "Kepler";
  font-style: italic;
}
.banner-content .shop-btn:hover{
  color: #fff;
}
@media screen and (max-width: 767px) {
  .main-hero-slider .banner-slide img{
    max-height: 164px;
  }
  .main-hero-slider .banner-slide a{
    max-height: 164px;
  }
  .hero-banner .hero__inner{
    padding: 30px 0;
  }
  .main-hero-slider .slick-dots{ 
    bottom: -20px;
  }
  .banner-content .shop-btn {
    margin: 120px auto;
  }
  .shopify-section.hero-banner {
    margin-top: 41px;
    padding-bottom: 20px;
  }
  .banner-content .mega-title {
    font-size: 80px;
    line-height: 70px;
    margin-top: 20px;
  }
  .banner-content {
    padding: 0 20px;
  }
  .featured-collection {
    padding-top: 50px;
  }
  .featured-collection .section-header {
    margin-bottom: 20px !important;
  }
